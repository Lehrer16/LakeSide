{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",          // Optional: adjust based on project needs
    "paths": {
      "*": ["src/*"]          // Optional: to simplify imports
    }
  },
  "include": ["src/**/*.ts", "../client/src/uploadthing.ts"],
  "exclude": ["node_modules"]
}